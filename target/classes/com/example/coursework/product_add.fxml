<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="300.0" prefWidth="312.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coursework.AddProductController">
    <children>
        <Pane layoutX="-3.0" layoutY="1.0" prefHeight="48.0" prefWidth="315.0" style="-fx-background-color: #39A67F;">
            <children>
                <Label alignment="CENTER" layoutX="102.0" layoutY="12.0" prefHeight="25.0" prefWidth="105.0" style="-fx-background-color: #39A67F;" text="Add Product" />
            </children>
        </Pane>
        <TextField fx:id="productNameField" layoutX="80.0" layoutY="116.0" promptText="Enter Product Name" />
        <Button fx:id="addProductBtn" layoutX="232.0" layoutY="253.0" mnemonicParsing="false" onAction="#productAdd" text="Add" />
        <Button fx:id="productCleanBtn" layoutX="39.0" layoutY="253.0" mnemonicParsing="false" onAction="#productClean" text="Clear" />
      <Label layoutX="88.0" layoutY="64.0" prefHeight="17.0" prefWidth="134.0" text="Select the Category" />
      <ChoiceBox fx:id="categoryChoiceBox" layoutX="80.0" layoutY="81.0" prefWidth="150.0" />
      <TextField fx:id="productIdField" layoutX="80.0" layoutY="153.0" promptText="Enter product id" />
      <Label fx:id="resultLbl" alignment="CENTER" layoutX="3.0" layoutY="223.0" prefHeight="17.0" prefWidth="304.0" />
      <TextField fx:id="stockField" layoutX="80.0" layoutY="191.0" promptText="Enter current stock" />
    </children>
</AnchorPane>
